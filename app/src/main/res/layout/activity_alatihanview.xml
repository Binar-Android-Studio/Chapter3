<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topic2.a_latihanview"
    android:padding="20dp">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="HASILNYA"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hasil"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umur"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tinggi badan"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat Badan"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI Anda"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/hasilumur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="masukkan umur"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hasiltinggibadan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="masukkan tinggi badan"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hasilberatbadan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="masukkan berat badan"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/hasilbmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="belum di isi"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hasilkategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="belum di isi"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>